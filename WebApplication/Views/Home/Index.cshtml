@model List<MyProject.Entities.Concrete.Match>
@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <div class="text-center border" style="padding:10px 20px ">
        @if (Model != null)
        {
            @for (int i = 0; i < Model.Count(); i++)
            {

                <div class="d-flex justify-content-md-between border-bottom">
                    <div style="width:25%">@Model[i].Status.ShortName</div>
                    <div class="text-left" style="width: 25%">@Model[i].HomeTeam.Name</div>
                    <div class="d-flex flex-column"  style="width: 25%">
                        <div >@Model[i].HomeTeamScore.Regular - @Model[i].AwayTeamScore.Regular</div>
                        <div style="font-size:10px">@Model[i].HomeTeamScore.HalfTime - @Model[i].AwayTeamScore.HalfTime</div>
                    </div>
                    <div class="text-left" style="width: 25%">@Model[i].AwayTeam.Name</div>
                </div>
                

            }
        }
        else
        {
            <div class="d-flex justify-content-center">
                Gösterilecek maç bulunmamakta
            </div>
        }
    </div>
</div>
